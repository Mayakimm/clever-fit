 <div class="simple-calendar calendar-container text-center d-flex justify-content-between">
  <%= link_to '&larr;'.html_safe, calendar.url_for_previous_view, class: "previous-link move-week"%>
  <span class="calendar-title move-month"><%= @current_month_year %></span>
  <%= link_to '&rarr;'.html_safe, calendar.url_for_next_view, class: "next-link move-week" %>
</div>

<div class="weekly-calendar d-flex justify-content-between">
  <% @date_range.each_slice(7) do |week| %>
    <% week.each do |day| %>
      <% day_summary = @day_summaries[day] %>
      <div class="daily-calendar d-flex flex-column py-0">
        <% if day_summary == "completed" %>
          <p class="mt-1 mb-0">●</p> <!-- Present -->
        <% else %>
          <p class="mt-1 mb-0">○</p> <!-- Absent -->
        <% end %>
        <p class="mb-0"><%= t('date.abbr_day_names')[day.wday] %></p>
        <p class="mt-0 mb-1"><%= day.day %></p>
      </div>
    <% end %>
  <% end %>
</div>
</div>
