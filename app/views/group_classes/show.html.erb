<div class="group-class-img-container">
  <div class="img-box d-flex justify-content-center">
    <%= image_tag @rand_img, alt: "Random Image", class:"rand-image rounded-5" %>
    <div class="group-class-img-info d-flex justify-content-between">
      <div class="activity-category d-flex flex-column justify-content-center align-items-center">
        <p class="activity-item mb-0 rounded-circle" >🔥</p>
        <p class="activity-result"> 225kcal </p>
      </div>
      <div class="activity-category d-flex flex-column justify-content-center align-items-center">
        <p class="activity-item mb-0 rounded-circle" >⏳</p>
        <p class="activity-result"> 60min </p>
      </div>
      <div class="activity-category d-flex flex-column justify-content-center align-items-center">
        <p class="activity-item mb-0 rounded-circle" >⛳️</p>
        <p class="activity-result"> Beginner </p>
      </div>
    </div>
    <div class="group-class-img-title">
      <h2 class="fs-1"><%= @group_class.name %></h2>
    </div>
  </div>
</div>

<div class="text-container">
  <p class="mb-5">
  📍 <%= @group_class.address %><br>
  ⏱️ <%= @group_class.time.strftime('%H:%M') %>, <%=@group_class.date.day %> <%=@group_class.date.strftime("%b") %> (<%=@group_class.date.strftime("%a")%>), <%=@group_class.date.strftime("%Y")%><br>
  👥 <%= @group_class.limit_of_students %>
  </p>

  <div class="mb-3">
    <p class="mb-0">Description</p>
    <p class="mb-0"><%= @group_class.description %></p>
  </div>

  <div>
    <p class="mb-0"> Contact</p>
    <p class="mb-0"><%= @group_class.contact %></p>
  </div>
</div>
