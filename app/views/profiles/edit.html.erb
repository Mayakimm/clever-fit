<%= form_for(@profile, url: profile_path, method: :patch) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :age %><br />
    <%= f.number_field :age, in: 16..99 %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.text_field :gender %>
  </div>
  <div class="field">
    <%= f.label :goal %><br />
    <%= f.text_area :goal %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :height, "Height (in meters)" %><br />
    <%= f.number_field :height, step: '0.01' %>
  </div>
  <div class="field">
    <%= f.label :weight, "Weight (in kilos)" %><br />
    <%= f.number_field :weight, step: '0.1' %>
  </div>
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>

