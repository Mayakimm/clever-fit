    <p class="mt-1 mb-0">●</p> <%# if there is a record%>
    <p class="mb-0">Sun</p>
    <p class="mt-0 mb-1"><%= @today_date%></p>
  </div>
  <div class="daily-calendar d-flex flex-column py-0">
    <p class="mt-1 mb-0">○</p> <%# if there is a record%>
    <p class="mb-0">Mon</p>
    <p class="mt-0 mb-1"><%= @today_date%></p>
  </div>
  <div class="daily-calendar d-flex flex-column py-0">
    <p class="mt-1 mb-0">●</p> <%# if there is a record%>
    <p class="mb-0">Tue</p>
    <p class="mt-0 mb-1"><%= @today_date%></p>
  </div>
  <div class="daily-calendar d-flex flex-column py-0">
    <p class="mt-1 mb-0">●</p> <%# if there is a record%>
    <p class="mb-0">Wed</p>
    <p class="mt-0 mb-1"><%= @today_date%></p>
  </div>
  <div class="daily-calendar d-flex flex-column py-0">
    <p class="mt-1 mb-0">○</p> <%# if there is a record%>
    <p class="mb-0">Thu</p>
    <p class="mt-0 mb-1"><%= @today_date%></p>
  </div>
  <div class="daily-calendar d-flex flex-column py-0">
    <p class="mt-1 mb-0">○</p> <%# if there is a record%>
    <p class="mb-0">Fri</p>
    <p class="mt-0 mb-1"><%= @today_date%></p>
  </div>
    <div class="daily-calendar d-flex flex-column px-2 py-0">
    <p class="mt-1 mb-0">○</p> <%# if there is a record%>
    <p class="mb-0">Sat</p>
    <p class="mt-0 mb-1"><%= @today_date%></p>
  </div>
</div>

<%= week_calendar(events: @workouts, end_attribute: :end_time) do |date, workouts| %>
  <%= date %>

  <% workouts.each do |workout| %>
    <div class="workout">
      <p><%= workout.name %></p>
    </div>
  <% end %>
<% end %>

<div class="daily-summary d-none">
  <p class="mb-0 fs-6">
    💪 Workout Type : “Strength Training”<br>
    ⏳ Duration : 45 mins<br>
    🔥 Calories Burnt : 350 kcal
  </p>
</div>
<%# #Activities list %>
<div class="activity-section">
  <h2>Activities</h2>
  <div class="activity-category d-flex justify-content-evenly mt-3">
    <% @workout_names.each do |type| %>
      <div class="d-flex flex-column justify-content-center align-items-center">
        <p class="activity-item p-3 mb-0">🧘‍♀️</p>
        <p> <%= type %> </p>
      </div>
    <% end %>
  </div>
</div>

<%# #Class for you title with class cards %>
<div class="group-class-index">
  <h2>Class for you</h2>
  <% if @groupe_classes.present? %>  <%# Check if @groupe_classes is not nil or empty %>
    <% @groupe_classes.each do |group_class| %>
      <%= link_to group_class_path(group_class), class: "group-class-card-link text-decoration-none text-dark" do %>
        <div class="group-class-card d-flex px-4 py-2">
          <div class="group-class-image p-3">
            <%= image_tag group_class.image_url, alt: "GroupClass Image", class: "group-class-img" %>
          </div>
          <div class="flex-grow-1 card-info ms-4 d-flex flex-column">
            <div class="card-letters pt-1 pb-3">
              <p class="mb-0 fs-5"><%= group_class.name %></p>
              <p class="mb-1"><%= group_class.time.strftime('%H:%M') %>, <%= group_class.date.day %>/<%= group_class.date.month %> (<%= group_class.date.strftime("%a") %>)</p>
            </div>
            <%# Uncomment if you have a price attribute in group_class %>
            <%# <div class="price"> %>
            <%#   <p class="text-end fs-5 mb-0">€ <%= group_class.price %>
            <%# </div> %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <p>No upcoming classes.</p>
  <% end %>
</div>
