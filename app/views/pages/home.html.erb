<%# #Class for you title with class cards %>
<div class="group-class-index m-auto">
  <h2>Class for you</h2>
  <% @groupe_classes.each do |group_class|%>
    <div class="group-class-card d-flex px-4 py-2">
      <div class="group-class-image p-3">image</div>
      <div class="flex-grow-1 card-info ms-4 d-flex flex-column">
        <div class="card-letters pt-3">
          <p class="mb-0 fs-4"><%=group_class.name%></p>
          <p class="mb-1"><%=group_class.time.strftime('%H:%M')%>, <%=group_class.date.day%>/<%=group_class.date.month%> (<%=group_class.date.strftime("%a")%>)</p>
        </div>
        <div class="price">
          <p class="text-end fs-5">€ 30</p>
        </div>
      </div>
    </div>
  <% end %>

