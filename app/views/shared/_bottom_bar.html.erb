<div class="bottom-bar rounded-pill">
    <p class="bar-button ms-3">
        <%= link_to home_path, class: "text-decoration-none text-white", onclick: "window.location.href='#{home_path}'" do %>
            <i class="fa-solid fa-house" style="color: #ffffff;"></i>
        <% end %>
    </p>

    <p class="bar-button">
        <%= link_to "#", id: "chooseWorkoutButton", class: "text-decoration-none text-white btn btn-link" do %>
        Choose Workout
        <% end %>
    </p>

    <p class="bar-button me-3">
        <%= link_to profile_path, class: "text-decoration-none text-white" do %>
            <i class="fa-solid fa-user" style="color: #ffffff;"></i>
        <% end %>
    </p>
</div>

<div id="myModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h1>ðŸ’ª</h1>
        <h2>Choose Today's Program!</h2>
        <ul>
          <% @workouts.each do |workout| %>
            <li>
                <%= link_to overview_workout_path(workout) do %>
                <button id="workoutType1" class="workout-type-button"><%= workout.name %></button>
              <% end %>
            </li>
          <% end %>
        </ul>
    </div>
</div>

<script src="<%= asset_path('modal.js') %>"></script>

