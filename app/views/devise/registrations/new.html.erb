<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  <%= f.password_field :password, autocomplete: "new-password" %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

  <%= f.fields_for :profile do |profile_fields| %>
    <%= profile_fields.text_field :name, placeholder: "Name" %>
    <%= profile_fields.number_field :age, placeholder: "Age" %>
    <%= profile_fields.text_field :gender, placeholder: "Gender" %>
    <%= profile_fields.number_field :height, placeholder: "Height (meters)" %>
    <%= profile_fields.number_field :weight, placeholder: "Weight (kilos)" %>
    <%= profile_fields.text_area :goals, placeholder: "Goals" %>
  <% end %>

  <%= f.submit "Sign up" %>
<% end %>


<%= render "devise/shared/links" %>
