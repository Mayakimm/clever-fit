<div class="workout_summary">

  <h1>Awesome!</h1>

  <div class="card">
    <p>Total Time:</p>
    <p><%= @duration_today %> minutes</p>
  </div>
  <div class="card">
    <p>Total Volume:</p>
    <p><%= @total_kg_lifted %> KG</p>
  </div>
  <div class="card">
    <p>Total Calories Burnt:</p>
    <p><%= @calories_burnt_today %> kcal</p>
  </div>
  <div class="card">
    <p>PRs:</p>
    <p><%= @pr_count %></p>
  </div>

  <table>
    <thead>
      <tr>
        <th>Exercise</th>
        <th>Volume</th>
      </tr>
    </thead>
    <tbody>
      <% @exercise_detail.each do |exercise| %>
      <% current_user.add_pushups(exercise[:volume]) if exercise[:name] == "Push-up" %>
      <% current_user.add_squats(exercise[:volume]) if exercise[:name] == "Squat" %>
      <% current_user.add_pullups(exercise[:volume]) if exercise[:name] == "Pull-up" %>
        <tr>
          <td><%= exercise[:name] %></td>
          <td><%= exercise[:volume] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
