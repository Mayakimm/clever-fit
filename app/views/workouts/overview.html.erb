<div class="center-content">
  <h1>Today is <%= @workout.name %> day</h1>

  <%= image_tag "#{@workout.name.downcase}.png" %>

  <div>
    <p><strong>Activated muscles:</strong> <%= @workout.muscle_group %></p>
      <p>⏰ <%= @duration %> minutes</p>
  </div>

  <div class="button-container">
    <%= link_to "Change Body Part", "#", class: "btn btn-primary-custom" %>
    <%= link_to "See List of Exercises in This Program", description_workout_path(@workout), class: "btn btn-primary-custom" %>
    <%= link_to "Start Workout", "#", class: "btn btn-success-custom" %>
  </div>
</div>
