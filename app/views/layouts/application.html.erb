    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" 'your_stylesheet', media: 'all' %>
    <%= javascript_importmap_tags %>

      <!-- Include Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Questrial&display=swap" rel="stylesheet">

  </head>

  <body>
    <%= render "shared/navbar" %>
    <%= render "shared/flashes" %>

    <%# <nav> %>
      <%# if user_signed_in? %>
        <%#= link_to 'My Profile', profile_path %>
      <%# end %>
    <%# </nav> %>

    <%= yield %>
    <% if controller_name == 'pages' && action_name == 'home' %>
      <%= render "shared/bottom_bar"%>
    <% end %>
    <% if controller_name == 'workouts' && action_name == 'overview'%>
      <%= render "shared/bottom_bar"%>
    <% end %>
    <% if controller_name == 'workouts' && action_name == 'summary' %>
      <%= render "shared/bottom_bar"%>
    <% end %>
    <% if controller_name == 'profiles' && action_name == 'show' %>
      <%= render "shared/bottom_bar"%>
    <% end %>
    <% if controller_name == 'group_classes' && action_name == 'show' %>
      <%= render "shared/bottom_bar"%>
    <% end %>
    <% if controller_name == 'exercises' && action_name == 'show' %>
      <%= render "shared/bottom_bar"%>
    <% end %>
    <% if controller_name == 'workouts' && action_name == 'show' %>
      <%= render "shared/bottom_bar"%>
    <% end %>
  </body>
</html>
